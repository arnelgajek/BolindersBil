@model IEnumerable<Vehicle>


<p>This is the Vehicle Index page!</p>


<div class="container">
    <div class="row">
        <div id="filterBox">
            <form>
                @*TODO: Fix this form with the current model*@
                <div class="form-group">
                    <label>Årstyp</label>
                    <select class="form-control"></select>
                </div>
                <div class="form-group">
                    <label>Bränsle</label>
                    <select class="form-control">
                        <option selected>Bensin</option>
                        <option>Disel</option>
                        <option>El</option>
                        <option>Miljöbränsle/Hybrid</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Karosstyp</label>
                    <select class="form-control">
                        <option selected>Småbil</option>
                        <option>Sedan</option>
                        <option>Halvbil</option>
                        <option>Kombi</option>
                        <option>SUV</option>
                        <option>Coupé</option>
                        <option>Cab</option>
                        <option>Familjebuss</option>
                        <option>Yrkesfordon</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Pris</label>
                    <input class="form-control" type="range" />
                </div>
                <div class="form-group">
                    <label>Mil</label>
                    <input class="form-control" type="range" />
                </div>
                <div class="form-group">
                    <label>Växellåda</label>
                    <select class="form-control">
                        <option selected>Manuell</option>
                        <option>Automat</option>
                    </select>
                </div>


            </form>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.Vehicles)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="~/Logo/Ford-logo-2003-1366x768.png" data-holder-rendered="true" style="height: 150px; width: 50%; display: block;">
                    <div class="caption">
                        <h3 id="thumbnail-label">@item.Model</h3>
                        <p>@item</p>
                        <p>@item.Brand</p>
                        <p>@item.Color</p>
                        <p>@item.Gearbox</p>
                        <p>@item.Used</p>
                    </div>
                </div>
            </div>
        }
    
