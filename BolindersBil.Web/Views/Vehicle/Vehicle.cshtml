@model VehicleForSaleViewModel

@{
    Layout = "~/Views/Shared/_VehicleForSaleLayout.cshtml";
}

<div class="container" style="margin-top:50px">
    <div class="row">
        <!-- Carousel: -->
        <div class="col-sm-12" style="margin-bottom:20px">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" style="width:100%">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/vehicle_images/Test_ABC123/1956d4bc-02be-4829-ab3e-22220c4f72f7_ABC123_test.jpg" alt="IMG_NOT_FOUND">
                    </div>
                    @*<div class="carousel-item">
                            <img class="d-block w-100" src="~/images/vehicle_images/BMW_TTT777/8cdf0c20-1bb9-4bb5-b086-a2bc048ae884_bmw_inside.jpg" alt="IMG_NOT_FOUND">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/vehicle_images/BMW_TTT777/f31db4e6-3676-4312-9c57-1776b19df9b5_BMW.jpg" alt="IMG_NOT_FOUND">
                        </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Föregående</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Nästa</span>
                </a>
            </div>
        </div>

        <!-- Bilmärke: -->
        <div class="col-sm-12" style="background-color:yellow; margin-bottom:20px">
            <h1>BILMÄRKE:</h1>
        </div>
        <div class="col-sm-12" style="background-color:green; margin-bottom:20px">
            <h1>INFORMATION OM BILEN:</h1>
        </div>
        <div class="col-sm-12" style="background-color:orange; margin-bottom:20px">
            <h1>PRISKALKYL:</h1>
        </div>
        <div class="col-sm-12" style="background-color:lightblue; margin-bottom:20px">
            <h1>RELATERADE FORDON:</h1>
        </div>
        <div class="col-sm-12" style="background-color:pink; margin-bottom:20px">
            <h1>KONTAKTA SÄLJARE:</h1>
        </div>
    </div>
    <div class="float-sm-right" style="margin-bottom:10px">
        <button type="button" class="btn btn-warning">Tillbaka</button>
        <button type="button" class="btn btn-info">Dela</button>
    </div>
</div>

